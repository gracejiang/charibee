<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    tools:context=".OrganizationDetailsActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/org_details_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Name"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/org_details_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Category"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/org_details_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Address" />

        <TextView
            android:id="@+id/org_details_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Website" />

        <TextView
            android:id="@+id/org_details_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Email" />

        <TextView
            android:id="@+id/org_details_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Phone #" />

        <TextView
            android:id="@+id/org_details_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Description" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/org_details_rv_volunteers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/org_details_join_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/button_color"
            android:text="Join Organization"
            android:textColor="@color/button_text_color" />

        <Button
            android:id="@+id/org_details_edit_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:text="Edit Organization" />

        <Button
            android:id="@+id/org_details_delete_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"
            android:text="Delete Organization" />

    </LinearLayout>


</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/default_margin"
    tools:context="com.example.charibee.activities.NewOrganizationActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-light"
            android:text="Create a New Organization"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/new_org_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Organization Name"
            android:inputType="textPersonName" />

        <Spinner
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:id="@+id/new_org_spinner_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/new_org_tagline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter a brief tagline for your organization."
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/new_org_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter a description for your organization."
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:minLines="5" />

        <Button
            android:id="@+id/new_org_set_address_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Address (Optional)" />

        <EditText
            android:id="@+id/new_org_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Organization Website (Optional)"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/new_org_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email (Optional)"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/new_org_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Phone Number (Optional)"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/new_org_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:theme="@style/PrimaryButton"
            android:layout_marginTop="12dp"
            android:text="Register Organization" />

    </LinearLayout>


</ScrollView>